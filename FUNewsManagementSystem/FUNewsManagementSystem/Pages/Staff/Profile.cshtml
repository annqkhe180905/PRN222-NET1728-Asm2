
@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4 container-custom">
    <div class="card card-outside-custom">
        <div class="text-center my-3">
            <h1 class="fw-bold text-white display-4">Profile</h1>
        </div>
        <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center p-4">
                <label class="form-label"><strong>Avatar:</strong></label>
                <img src="@(string.IsNullOrEmpty(Model.Account.ImgUrl) ? "/img/avt.jpg" : "/img/" + Model.Account.ImgUrl)"
                     alt="User Avatar"
                     class="rounded-circle mx-auto d-block"
                     width="120" height="120">

                
                <label class="form-label mt-3"><strong>Name:</strong></label>
                <h4>@Model.Account.AccountName</h4>
                
                <label class="form-label"><strong>Email:</strong></label>
                <p class="text-muted">@Model.Account.AccountEmail</p>

                    <label class="form-label"><strong>Password:</strong></label>
                    <p class="text-muted">@Model.Account.AccountPassword</p>
                
                <div class="mt-3">
                    <button class="logout-btn btn" data-bs-toggle="modal" data-bs-target="#editProfileModal">Edit Profile</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Editing Profile -->
<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="ProfileImage" class="form-label"><strong>Upload New Avatar:</strong></label>
                        <input type="file" name="ProfileImage" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label for="AccountName" class="form-label"><strong>Name:</strong></label>
                        <input type="text" asp-for="Account.AccountName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="AccountEmail" class="form-label"><strong>Email:</strong></label>
                        <input type="email" asp-for="Account.AccountEmail" class="form-control" required readonly />
                    </div>
                    <div class="mb-3">
                        <label for="NewPassword" class="form-label"><strong>New Password (optional):</strong></label>
                        <input type="password" asp-for="NewPassword" class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
